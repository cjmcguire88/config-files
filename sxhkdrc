#
# wm independent hotkeys
#

# terminal
super + t
	st

# terminal (Multiplex)
super + shift + t
	st tmux

# make sxhkd reload its configuration files:
super + ctrl + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
super + {shift + Escape,Escape}
	bspc {quit,wm -r}

# close
super + v
	bspc node -c

# kill
super + alt + v
	bspc node -k

# alternate between the tiled and monocle layout
super + z
	bspc desktop -l next

# fullscreen
super + alt + z
	bspc node -t {fullscreen,tiled}

# send the newest marked node to the newest preselected node
#super + y
#	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + shift + z 
	bspc node -s biggest

# rotate nodes
super + c
	bspc node @/ -R 90

# hide window
super + m	
	bspc node -g hidden

# unhide window
super + shift + m 
	bspc node {,$(bspc query -N -n .hidden | tail -n1)} -g hidden=off

#
# state/flags
#

# set the window state
super + ctrl {1,2}
	bspc node -t {tiled,floating}

# set the node flags
#super + ctrl + {1,2,3,4}
#	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node for the given path jump
#super + {p,b,comma,period}
#	bspc node -f @{parent,brother,first,second}

# focus the next node in the current desktop
super + x
	bspc node -f next.local

# focus the next/previous desktop in the current monitor
super + Tab
	bspc desktop -f next.local

# focus the last node/desktop
#super + grave
#	bspc node -f last

# focus the older or newer node in the focus history
#super + {o,i}
#	bspc wm -h off; \
#	bspc node {older,newer} -f; \
#	bspc wm -h on

# send to the given desktop
super + {2,1}
	bspc node -d {next,prev}

#
# preselect:
#

# preselect the direction
super + ctrl {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
#super + ctrl + {1-9}
#	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + End
	bspc node -p cancel

# cancel the preselection for the focused desktop
#super + ctrl + shift + space
#	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize:
#

# expand a window by moving one of its side outward
super + ctrl + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
#
# power
#

# poweroff
super + ctrl + p
	st poweroff

# reboot
super + ctrl + r
	st reboot

#
# applications:
#

# cheatsheet
super + F5
	emacs  ~/.config/sxhkd/sxhkd-cheatsheet

# network connections
super + F4
	st sudo nethogs

# open browser
super + shift + b
	vivaldi-stable

# open browser2
#super + alt + b
#	surf https://www.google.com

# open tor browser
super + alt + b
	torbrowser-launcher

# open file manager
super + shift + f
	dolphin

# open file manager2
super + alt + f
	st ranger

# open pamac 
super + shift + u
	pamac-manager

# open kwrite
super + shift + c
	kwrite

# open vscode
super + alt + c
	code

# open settings
super + shift + s
	systemsettings5

# open steam 
super + shift + g
	prime-run steam

# open lutris
super + alt + g
	lutris

# open discord
super + shift + d
	discord

# open task manager
super + F1
	st bpytop

# open system log
super + F2
	ksystemlog

# open nvtop
super + F3
	st nvtop

# open kodi
super + shift + k
	kodi
#
# functions:
#

# update system
super + ctrl + u
	st yay -Syu
