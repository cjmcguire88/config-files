#
# wm independent hotkeys
#

# terminal
super + t
	~/.local/bin/st -e /usr/bin/zsh

# alternative terminal
super + alt +t
    alacritty

# terminal (Multiplex)
super + shift + t
    ~/.local/bin/st ~/.local/bin/tmux2

# make sxhkd reload its configuration files:
super + ctrl + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
super + {shift + Escape,Escape}
	bspc {quit,wm -r}

# close
super + x
	bspc node -c

# kill
super + ctrl + x
	bspc node -k

# alternate between the tiled and monocle layout
super + a
	bspc desktop -l next

# fullscreen
super + ctrl + a
	bspc node -t {fullscreen,tiled}

# swap the current node and the biggest node
super + ctrl + s
	bspc node -s biggest

# rotate nodes
super + z
	bspc node @/ -R 90

# hide window
super + m
	bspc node -g hidden

# unhide window
super + ctrl + m
	bspc node {,$(bspc query -N -n .hidden | tail -n1)} -g hidden=off

# focused desktop window gap
super + ctrl + button{4,5}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {-,+} 2 ))

#
# state/flags
#

# set the window state
super + ctrl {1,2}
	bspc node -t {tiled,floating}

#
# focus/swap
#

# focus the previous node in the current desktop
super + s
	bspc node -f prev.local

# focus next node
super + d
    bspc node -f next.local

# focus the next desktop in the current monitor
super + w
	bspc desktop -f next.local

# focus desktop #
super + {1-8}
    bspc desktop -f ^{1-8}

# previous desktop in current monitor
super + q
    bspc desktop -f prev.local

# focus the next/previous monitor
super + Tab
    bspc monitor -f next

# send to the given desktop
super + shift + {1-8}
	bspc node -d ^{1-8}

# send to next monitor
super + shift + Tab
    bspc node -m next

#
# preselect:
#

# preselect the direction
super + ctrl {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# cancel the preselection for the focused node
super + ctrl + End
	bspc node -p cancel

#
# move/resize:
#

# expand a window by moving one of its side outward
super + ctrl + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

#
# power
#

# poweroff
super + ctrl + p
	st poweroff

# reboot
super + ctrl + o
	st reboot

# hibernate
super + ctrl + i
    systemctl hibernate

# kill xserver
super + ctrl + u
    pkill X

#
# applications:
#

# cheatsheet
super + F5
	st cat ~/.config/sxhkd/sxhkd-cheatsheet

# rofi
super + grave
    rofi -show drun

# screenshot
super + F6
    scrot

# network connections
super + F4
	st sudo nethogs

# open browser
super + shift + b
    chromium	

# open tor browser
super + alt + b
	torbrowser-launcher

# open file manager
super + shift + f
	dolphin

# open pamac 
super + shift + u
	pamac-manager

# open kwrite
super + shift + c
	st nvim

# open vscode
super + alt + c
	code

# open settings
super + shift + s
	systemsettings5

# open steam 
super + shift + g
	prime-run /usr/bin/steam-runtime %U

# open lutris
super + alt + g
	lutris

# open discord
super + shift + d
	discord

# open task manager
super + F1
	st btop

# open system log
super + F2
	ksystemlog

# open nvtop
super + F3
	st nvtop

# open kodi
super + shift + k
	kodi

# open email
super + shift + m
    mailspring

# edex ui  (lol)
super + shift + h
    edex-ui

# qutebrowser
super + b
    qutebrowser

